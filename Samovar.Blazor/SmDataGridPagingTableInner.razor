@using System.Globalization
@typeparam T
@inherits SmDesignComponentBase

<div @ref="@LayoutService.GridOuterRef" class="s-grid-container" style="@Style.CssStyle" @onkeydown:stopPropagation="true">
	<div style="display:flex;flex-direction:column;">
		<DataGridHeaderRow T=T />
		@if (LayoutService.FilterMode.Value == DataGridFilterMode.FilterRow)
		{
			<DataGridFilterRowMain T=T />
		}
	</div>
	<div id="@ConstantService.InnerGridId" class="s-grid-content" @ref="@LayoutService.GridInnerRef" >
		@if (InsertingForm != null){ @InsertingForm }
		<DataGridPagingTablePanel T=T />
	</div>
	<DataGridPagingFooter />
</div>

@if (EditingPopup != null){	@EditingPopup }
@if (InsertingPopup != null){ @InsertingPopup }