@typeparam T
@inherits SmDesignComponentBase

<!-- Modal -->
<div style="display:block;" class="modal" @ref=Ref id=@Id data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content"  style="resize:both;overflow: auto;">
			<div class="modal-header" id=@($"{Id}header") style="cursor: move;">
				<h5 class="modal-title" id="staticBackdropLabel">Modal title</h5>
				<button type="button" class="btn-close" aria-label="Close" @onclick=@(() => EditingService.RowInsertCancel())></button>
			</div>
			<div class="modal-body">
				<GridRowEditing_Body RowModel=RowModel />
			</div>
			@if (RowModel.EditingDataItem is not null)
			{
				<div class="modal-footer">
					<button class="btn btn-outline-primary mx-1" @onclick=@(() => EditingService.RowInsertCommit(RowModel.EditingDataItem))>add</button>
					<button class="btn btn-outline-secondary mx-1" @onclick=@(() => EditingService.RowInsertCancel())>cancel</button>
				</div>
			}
		</div>
	</div>
</div>
<div class="modal-backdrop fade show"></div>