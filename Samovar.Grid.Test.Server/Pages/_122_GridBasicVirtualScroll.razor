@page "/_122_GridBasicVirtualScroll"
@using System.Linq

@inject WeatherForecastService ForecastService

<h1>Table basic (virtual scroll)</h1>

<SamovarGrid Data="@data"
             Height="400px" 
             TableTagClass="blueTable" 
             FilterMode="@GridFilterMode.FilterRow" 
             @ref="grid">
    <GridColumns>
        <GridColumn Title="Date" Field="@nameof(WeatherForecast.Date)" />
        <GridColumn Title="TemperatureC" Field="@nameof(WeatherForecast.TemperatureC)" />
        <GridColumn Title="TemperatureF" Field="@nameof(WeatherForecast.TemperatureF)" />
        <GridColumn Title="Summary" Field="@nameof(WeatherForecast.Summary)" />
    </GridColumns>
</SamovarGrid>


@code{
    IEnumerable<WeatherForecast> data;

    SamovarGrid<WeatherForecast> grid { get; set; }

    protected override async Task OnInitializedAsync()
    {
        data = await ForecastService.GetForecastAsync(DateTime.Now, 10000);
    }

    async Task ScrollToPosition(ChangeEventArgs args)
    {
        await grid.ScrollToPosition(int.Parse(args.Value.ToString()));
    }
}