@typeparam TItem
@inherits DesignComponentBase


<tr>
    @if (LayoutService.ShowDetailRow.Value)
    {
        <td style="text-overflow:ellipsis !important;overflow: hidden !important;white-space: nowrap !important;">
            <div class="s-flex s-flex-row s-align-content-center s-justify-content-center"></div>
        </td>
    }
    <td style="text-overflow:ellipsis !important;overflow: hidden !important;white-space: nowrap !important;" colspan="@(ColumnService.AllColumnModels.Where(c => c.ColumnType == ColumnType.Data || c.ColumnType == ColumnType.Command).Count())">
        <div>
            <GridRowEditing_Body RowModel=RowModel />
        </div>
        @if (RowModel.EditingDataItem is not null)
        {
            <div class="row">
                <div class="col s-flex justify-content-end">
                    <button class="btn btn-outline-primary mx-1" @onclick="@(() => EditingService.RowInsertCommit(RowModel.EditingDataItem))">add</button>
                    <button class="btn btn-outline-secondary mx-1" @onclick="@(() => EditingService.RowInsertCancel())">cancel</button>
                </div>
            </div>
        }
    </td>
</tr>